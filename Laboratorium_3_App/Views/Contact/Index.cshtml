@*@model Dictionary<int, Contact>*@
@model List<Contact>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista kontaktów</h1>
<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Dodaj kontakt</a><br />
<div>
    @if (Model.Count > 0)
    {
        <table class="table-bordered table">
            <tr>
                <th>@Html.DisplayNameFor(i => Model[0].Name)</th>
                <th>@Html.DisplayNameFor(i => Model[0].Birth)</th>
                <th>Akcje</th>
            </tr>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <a class="btn-outline-success" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id">Edycja</a>
                        <a class="btn-outline-info" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        <a class="btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                    <td>@item.Priority.GetDisplayName()</td>
                </tr>
            }
        </table>
    }
</div>
